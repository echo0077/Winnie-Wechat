/* components/goodsDetails/goodsDetails.wxss */
.header-box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #ccc;
  position: fixed;
  z-index: 1;
  width: 100%;
  background-color: #fff;
}
.icon-fanhui{
  margin-left: 30rpx;
  width: 120rpx;
}
.top-right{
  display: flex;
  flex-wrap: wrap;
  margin-right: 30rpx;
  width: 120rpx;
  justify-content: space-between;
}
.content-box{
  padding-top: 80rpx;
}
.content-carousel{
  background-color: #fff;
}
.carousel-item{
  height: 653rpx;
  border-bottom: 1rpx solid #ccc;
}
.carousel-img{
  height: 100%;
  width: 100%;
}
.content-text{
  padding: 30rpx;
  border-bottom: 1rpx solid #ededed;
  padding-bottom: 20rpx;
}
.content-title{
  font-size: 34rpx;
}
.goods-price{
  color: red;
  margin-top: 30rpx;
  font-size: 34rpx;
}
.goods-market-price{
  font-size: 24rpx;
  color: #bbb;
}
.country-box{
  display: flex;
  vertical-align: middle;
}
.country-img{
  width: 60rpx;
  height: 40rpx;
  margin: 15rpx 10rpx 0 0;
}
.country-name{
  font-size: 24rpx;
  color: #bbb;
  line-height: 60rpx;
}
.goods-prams-box{
 height: 2000rpx;
}
.port-dispatch{
  height: 80rpx;
  margin: 40rpx 0;
  padding: 0 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
  line-height: 80rpx;
  font-size: 28rpx;
}
.icon-test{
  position: absolute;
}
.dispatch-text{
  color: #ccc;
  margin-left: 50rpx;
}
.icon-xiangyou{
  position: absolute;
  right: 20rpx;
}
.circles-box{
  width: 10rpx;
  height: 10rpx;
  background: red;
  border-radius: 50%;
}
.goods-prams{
  height: 120rpx;
  display: flex;
  /* flex-wrap: wrap; */
}
.goods-prams-title{
  line-height: 120rpx;
  height: 100%;
  width: 15%;
}
.goods-prams-content-box{
  margin-left: 10rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap; 
}
.goods-prams-content{
  display: flex;
  width: 35%;
  /* flex-wrap: wrap; */
}
.goods-circles-box{
  width: 10%;
  height: 80rpx;
  line-height: 80rpx;
}