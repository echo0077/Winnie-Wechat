/**index.wxss**/
.index-box{
  background: #f8f9fc;
}
.home-nar-box{
  display: flex;
  align-items: center;
  height: 200rpx;
  background: #fff;
  border-bottom: 1px solid #ebebeb;
}
.home-nar{
 flex: auto;
 text-align: center;
}
.home-nar-img{
  width: 100rpx;
  height: 100rpx;
}
.special-box{
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
  background: #fff;
}
.special-content{
  width: 48%;
  height: 176rpx;
  border-bottom: 1rpx solid #ddd;
  padding: 10rpx 6rpx;
}
.special-content:nth-child(2n){
  border-left: 1rpx solid #ddd;
}
.special-img{
  width: 100%;
  height: 100%;
  border-radius: 8%;
}