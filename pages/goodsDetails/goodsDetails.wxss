/* pages/goodsDetails/goodsDetails.wxss */
.address-shadow-box{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
}
.address-box{
  height: 100%;
  width: 45%;
  position: fixed;
  top: 0;
  right: 0;
}
.show-address-box{
  right: 0px;
  transition: right 1s, transform 1s;
}
.hide-address-box{
  right: -187px;
  transition: right 1s, transform 1s;
}