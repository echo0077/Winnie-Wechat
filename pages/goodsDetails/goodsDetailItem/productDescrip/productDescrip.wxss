/* pages/goodsDetails/goodsDetailItem/productDescrip/productDescrip.wxss */
.goods-msg-header{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
}
.close-msg{
  position: absolute;
  right: 10rpx;
  font-size: 40rpx;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
.goods-msg-content{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}
.instruction-box-header{
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  height: 46rpx;
}
.instruction-box{
  width: 12rpx;
  height: 12rpx;
  background: #9f2e33;
  transform: rotate(45deg);
  margin-right: 16rpx;
}
.instruction-box-content{
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #636363;
  line-height: 40rpx;
}