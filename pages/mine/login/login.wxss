/* pages/mine/login/login.wxss */
.hearder-img{
  width: 100%;
  height: 290rpx;
}
.login-content{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.account-content{
  width: 90%;
  height: 208rpx;
  border: 1rpx solid #b5b5b5;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  background-color: #fff;
}
.content{
  display: flex;
  align-items: center;
  height: 70rpx;
  width: 100%;
  font-size: 28rpx;
}
.phone-content{
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
}
.icon-phone{
  margin-right: 20rpx;
}
.login-to{
  width: 90%;
  height: 80rpx;
  background-color: #9F2E33;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  margin-top: 50rpx;
}
.regist-box{
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size: 26rpx;
}
.regist-box :nth-child(1){
  color: #9F2E33;
  margin-left: 30rpx;
}
.regist-box :nth-child(2){
  margin-right: 25rpx;
}
.other-login{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 200rpx;
}
.login-img{
  width: 90%;
  height: 30rpx;
  margin-bottom: 40rpx;
}