/* pages/login/forgetPass/forgetPass.wxss */
.pass-box{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.content{

  width: 90%;
}
.account{
  width: 84%;
}
.phone-content{
  display: flex;
  align-items: center;
  height: 70rpx;
  width: 92%;
  font-size: 28rpx;
  border: 1rpx solid #b5b5b5;
  padding: 14rpx 4%;
  margin-bottom: 10rpx;
}
.icon-phone{
  margin-right: 20rpx;
}
.sms-verify{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 40rpx;
}
.sms-input{
  width: 60%;
  height: 85rpx;
  border: 1rpx solid #b5b5b5;
  background-color: #fff;
  padding-left: 20rpx;
}
.sms-number{
  width: 35%;
  height: 85rpx;
  background-color: #000;
  color: #fff;
  margin-left: 28rpx;
  line-height: 85rpx;
  text-align: center;
  border-radius: 10rpx;
}
.regist-now{
  width: 100%;
  height: 80rpx;
  background-color: #9F2E33;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  margin-top: 50rpx;
}