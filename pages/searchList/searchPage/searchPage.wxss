/* pages/searchList/searchList.wxss */
.weui-input{
  height: 80rpx;
  box-sizing: border-box;
  width: 85%;
  margin: 30rpx 0 0 20rpx;
  background: #ddd;
  padding-left: 20rpx;
  position: relative;
}
.icon-sousuo-box, .icon-qingchu-box{
  position: absolute;
  top: 40rpx;
  right: 25rpx;
}
.icon-qingchu-box{
  right: 115rpx;
  top: 45rpx;
  z-index: 99;
}
.hotSearch-content{
  overflow: hidden;
}
.hot-key-text{
  float: left;
  padding: 5px 8px;
  background-color: #f1f1f1;
  margin: 16rpx 16rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
}
.line{
  width: 100%;
  height: 20rpx;
  background: #eee;
  margin-top: 20rpx;
}
.hist-box{
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 25rpx;
  line-height: 50rpx;
}
.mini-btn{
  color: #C0C0C0;
  border: 1rpx solid #ccc;
  background: #F5F5F5;
  padding: 0 6rpx;
  float: right;
  margin:6rpx 10rpx 0 0;
}
.linkContent-item{
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #ccc;
  margin-left: 20rpx;
}