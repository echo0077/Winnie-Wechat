/* pages/searchList/searchPage/screenGoods/screenGoods.wxss */
.screen-list-box{
  width: 96%;
  margin: auto;
  border-bottom: 1rpx solid #bbb;
}
.title-box{
  height: 58rpx;
  line-height: 58rpx;  
}
.screen-up-icon{
  float: right;
  margin-right: 16rpx;
  width: 40rpx;
  text-align: center;
  line-height: 58rpx;

}
.screen-list-content-box{
  display: flex;
  flex-wrap: wrap;
}
.screen-list-content{
  width: 170rpx;
  height: 56rpx;
  box-sizing: border-box;
  padding: 0 8rpx;
  background: #e9ebf1;
  text-align: center;
  font-size: 24rpx;
  line-height: 56rpx;
  margin: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  position: relative;
}
.screen-list-content-active{
  border: #FF4500 solid 2rpx;
  background: #fff;
}
.screen-yes-icon{
  position: absolute;
  right: -4rpx;
}
.screen-input{
  width: 170rpx;
  background-color: #e9ebf1;
  margin: 0 10rpx;
  padding: 8rpx 0;
  text-align: center;
}
.footer-butt{
  height: 90rpx;
  width: 80%;
  border-top: 1rpx solid #e9ebf1;
  position: fixed;
  bottom: 20rpx;
  display: flex;
}
.footer-butt-content{
  width: 50%;
  height: 100%;
  line-height: 90rpx;
  text-align: center;
}
.handle-reset{
  background-color: #e9ebf1;
}
.sure-box{
  background-color: #ff6a00;
  color: #fff;
}