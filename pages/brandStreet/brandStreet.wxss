/* pages/brandStreet/brandStreet.wxss */
page{
  background-color: #F2F2F2;
  height: 100%;
}
.view-box{
  background-color: #F2F2F2;
  position: fixed;
  width: 100%;
  padding: 30rpx 0;
}
.weui-input{
  height: 66rpx;
  box-sizing: border-box;
  width: 90%;
  margin-left: 30rpx;
  background: #fff;
  padding-left: 60rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
}
.icon-sousuo-box{
  position: absolute;
  top: 33%;
  left: 40rpx;
}
.brand-title{
  font-size: 26rpx;
  padding-left: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.brand-list-item{
  display: flex;
  width: 100%;
  height: 120rpx;
  align-items: center;
  box-sizing: border-box;
  padding-right: 140rpx;
  background: #fff;
  border-bottom: 2rpx solid #e9ebf1;
}
.brand-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 60rpx 0 40rpx;
}
.brand-name{
  font-size: 24rpx;
}
.right-box-togo{
  position: fixed;
  top: 22%;
  right: 10rpx;
  width: 80rpx;
  text-align: center;
  font-size: 26rpx;
}
.loading-box{
  width: 100%;
  height: 896px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.loading-img{
  width: 120rpx;
  height: 120rpx;
}